<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_columnSpan="2"
              android:gravity="center">

    <ImageView
        android:id="@+id/img_empty_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/colorPrimary"
        android:src="@drawable/img_cloud_error_sync"
        />

    <ProgressBar
        android:id="@+id/pgr_first_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/game_details_margin"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <LinearLayout
        android:id="@+id/lyt_empty_text"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/cards_empty_text_padding"
            android:paddingRight="@dimen/cards_empty_text_padding"
            android:textSize="@dimen/game_empty_card_font_size"
            android:textColor="@color/colorPrimary"
            android:text="@string/game_empty_card_message"
            />

        <Button
            android:id="@+id/btn_reload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cards_empty_text_padding"
            android:gravity="center"
            android:text="@string/game_empty_reload"
            />
    </LinearLayout>

</LinearLayout>